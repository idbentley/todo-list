<h1>Sign Up</h1>

<%= form_for @account do |f| %>
  <% if @account.errors.any? %>
    <div class="error_messages">
      <h2>There were errors with the form</h2>
      <ul>
        <% for message in @account.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit %></p>
<% end %>
