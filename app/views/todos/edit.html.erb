<h1>Edit Todo Task</h1>

<%= form_for @todo do |f| %>
  <% if @todo.errors.any? %>
    <div class="error_messages">
      <h2>There were errors with the form</h2>
      <ul>
        <% for message in @todo.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :content %> <%= f.text_field :content %>
  </p>
	<p>
		<%= f.label :done %> <%= f.check_box :done %>
	<p>
  <p><%= f.submit %></p>
<% end %>
